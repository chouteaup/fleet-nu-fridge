{
  "name": "NU Fridge Development",
  "dockerComposeFile": "docker-compose.yml",
  "service": "fridge-dev",
  "workspaceFolder": "/workspace",

  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
    "ghcr.io/devcontainers/features/node:1": { "version": "18" }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.vscode-typescript-next",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "ms-azuretools.vscode-docker",
        "mqttx.vscode-mqttx",
        "vsciot-vscode.azure-iot-tools",
        "formulahendry.auto-rename-tag",
        "christian-kohler.path-intellisense"
      ]
    }
  },

  "forwardPorts": [5174, 3001, 1883, 9001],
  "portsAttributes": {
    "5174": {
      "label": "Simulator Frontend",
      "onAutoForward": "openBrowser"
    },
    "3001": {
      "label": "Fleet Backend API",
      "onAutoForward": "ignore"
    },
    "1883": {
      "label": "MQTT Broker",
      "onAutoForward": "ignore"
    },
    "9001": {
      "label": "MQTT WebSocket",
      "onAutoForward": "ignore"
    }
  },

  "postCreateCommand": "scripts/setup-fleet-core.sh",
  "postStartCommand": "scripts/sync-dev-manager.sh"
}